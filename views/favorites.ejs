<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_head') %>
  <body>
    <%- include('partials/_navbar') %>

    <div class="search-bar-container">
      <input class="search-bar" type="text" placeholder="Search...">
      <button class="fas fa-search" type="submit"></button>
      <button class="fas fa-filter" type="submit"></button>
      <button class="fas fa-sort" type="submit"></button>
    </div>

    <% for(let posting of postings) {%>
      <div class="posting-container">

        <img class="posting-image" src="<%= posting['image_photo_url'] %>" alt="posting-pic">

        <div class="posting-title-price-description">
          <span><%= posting['title'] %></span>
          <span>$<%= posting['price'] %></span>
          <span><%= posting['description'] %></span>
        </div>


    </div>
    <% } %>

  </body>
</html>
