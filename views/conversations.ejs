<!DOCTYPE html>
<html lang="en">

  <%- include('partials/_head') %>
  <body>
    <%- include('partials/_navbar') %>
    <h1>Conversations!</h1>

      <% let currentConv = undefined;
      for(let message of messages) { %>
          <h1 class="conversation_title"><% if (message['conversation_id'] !== currentConv) {  %>
            <% currentConv = message['conversation_id']; %>
            <%= message['title'] %>
         <% } %></h1>
            <div class="conversations-container">
            <% if (userIdent === message['sender_id']) { %>
                <p class="userSent sentMessage"><%= message['content'] %></p>
                <br>
                <p class="userSent date">
                  <% let date = JSON.stringify(message['time_sent']); %>
                  sent at <%= date.slice(1, 11) %>
                </p>

                <% }  else {%>
                  <p class="userRecieved sentMessage"><%= message['content'] %></p>
                  <br>
                  <p class="userRecieved date">
                    <% let date = JSON.stringify(message['time_sent']); %>
                    message recieved at <%= date.slice(1, 11) %>
                  </p>

                  <% } %>
                </div>
          <% } %>



  </body>





  </body>
</html>
